<div class="text-center" style="width: 16rem;">
  <h1 class="card-header text-secondary">My task : </h1>
    <h2 class="text-warning"><%= @task.title %></h2>
      <%= check_box_tag @task.completed %>
      <%= @task.details %>
  <%= link_to "Click to edit", edit_task_path(@task), class: "btn btn-success fw-bold text-decoration-none text-light" %>
  <%= link_to "Back to list", tasks_path, class: "btn btn-primary fw-bold text-decoration-none text-light" %>
</div>
